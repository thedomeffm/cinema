{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-container">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div>
        <label class="fos-label" for="username">{{ 'security.login.username'|trans }}</label>
    </div>
    <div>
        <input class="fos-form" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div>
        <label class="fos-label pt-4" for="password">{{ 'security.login.password'|trans }}</label>
    </div>
    <div>
        <input class="fos-form" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    <div>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div>
        <input class="btn btn-success btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

</form>
</div>