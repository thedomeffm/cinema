    {% for movie in movies %}
        <h2>{{ movie.name }}</h2>
        <div class="row">
            <div class="col-sm-2">
                <strong>L&auml;nge: </strong>{{ movie.duration }} Min.<br>
                <strong>3D: </strong>{% if movie.is3d %} ja {% else %} nein {% endif %}&emsp;<br>
                <strong>Altersfreigabe: </strong>{{ movie.ageRating }}<br>
            </div>
            <div class="col-sm-10">
                <p>{{ movie.description }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-1">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Donnerstag</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in movie.cinemaShows.donnerstag %}
                            <tr>
                                <td>{{ entry.date|date('d.m H:i') }} Uhr</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-xs-1">
                <table class="table">
                    <thead>
                        <tr>
